{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    // "module": "ES2022",
    "lib": [
      "es2021",
      "ES2021.String",
      "dom",
      "esnext"
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,

    "strictNullChecks": false,
    "resolveJsonModule": true,
    "types": [
      "@types/spotify-web-api-node",
      "@types/spotify-api"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}